<EditForm Model="@passwordModel" OnValidSubmit="ChangePasswordAsync">
    <DataAnnotationsValidator />
    <MudCard Elevation="0">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText>@_localizer[nameof(Fields.ChangePassword)]</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField T="string" Label="@_localizer[nameof(Fields.Password)]" @bind-Value="passwordModel.Password" For="@(() => passwordModel.Password)" InputType="InputType.Password"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Label="@_localizer[nameof(Fields.NewPassword)]" @bind-Value="passwordModel.NewPassword" For="@(() => passwordModel.NewPassword)"
                                  InputType="InputType.Password"></MudTextField>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Label="@_localizer[nameof(Fields.ConfirmNewPassword)]" @bind-Value="passwordModel.ConfirmNewPassword" For="@(() => passwordModel.ConfirmNewPassword)"
                                  InputType="InputType.Password"></MudTextField>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="pb-4 pl-4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" Class="ml-auto">@_localizer[nameof(Fields.ChangePassword)]</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>