@page "/account"
<BrunoMelo.FluxoCaixa.Client.Web.Shared.Components.PageTitle Title="@_localizer[nameof(Fields.Account)]" />
<MudGrid>
    <MudItem xs="12" sm="4" md="3">
        <MudCard Elevation="0">
            <MudCardContent>
                <div class="d-flex justify-center mb-4">
                    <MudAvatar Color="Color.Secondary" Style="height:250px; width:250px;">@FirstLetterOfName</MudAvatar>
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center">@profileModel.Name @profileModel.Surname</MudText>
                <MudText Align="Align.Center">@profileModel.Email</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="8" md="9">
        <MudGrid>
            <MudItem xs="12">
                <EditForm EditContext="@EditContext" OnValidSubmit="UpdateProfileAsync">
                    <DataAnnotationsValidator />
                    <MudCard Elevation="0">
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText>@_localizer[nameof(Fields.AccountDetails)]</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudGrid>
                                <MudItem xs="12" md="6">
                                    <MudTextField @bind-Value="@profileModel.Name" For="@(() => profileModel.Name)" Label="@_localizer[nameof(Fields.Name)]" />
                                </MudItem>
                                <MudItem xs="12" md="6">
                                    <MudTextField @bind-Value="@profileModel.Surname" For="@(() => profileModel.Surname)" Label="@_localizer[nameof(Fields.Surname)]" />
                                </MudItem>
                                <MudItem xs="12" md="6">
                                    <MudTextField @bind-Value="@profileModel.Email" Label="@_localizer[nameof(Fields.Email)]" For="@(() => profileModel.Email)"
                                                  InputType="InputType.Email" Disabled=true />
                                </MudItem>
                            </MudGrid>
                        </MudCardContent>
                        <MudCardActions Class="pb-4 pl-4">
                            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" ButtonType="ButtonType.Submit">@_localizer[nameof(Fields.Save)]</MudButton>
                        </MudCardActions>
                    </MudCard>
                </EditForm>
            </MudItem>
            <MudItem xs="12">
                <ChangePassword />
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>